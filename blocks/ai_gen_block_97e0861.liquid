              <div class="popup-modal-form-field-{{ ai_gen_id }}">
                <label for="ai-modal-email-{{ ai_gen_id }}" class="popup-modal-form-label-{{ ai_gen_id }}">
                  Email
                </label>
                <input
                  type="email"
                  id="ai-modal-email-{{ ai_gen_id }}"
                  name="contact[email]"
                  class="popup-modal-form-input-{{ ai_gen_id }}"
                  value="{{ form.email }}"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    aria-invalid="true"
                    aria-describedby="ai-modal-form-error-{{ ai_gen_id }}"
                  {% endif %}
                  {% if form.posted_successfully? %}
                    aria-describedby="ai-modal-form-success-{{ ai_gen_id }}"
                  {% endif %}
                  required
                >
                {%- if form.errors -%}
                  <div id="ai-modal-form-error-{{ ai_gen_id }}" class="popup-modal-form-error-{{ ai_gen_id }}">
                    {{ form.errors.messages.email }}
                  </div>
                {%- endif -%}
              </div>

              <div class="popup-modal-form-field-{{ ai_gen_id }}">
                <label for="ai-modal-message-{{ ai_gen_id }}" class="popup-modal-form-label-{{ ai_gen_id }}">
                  Message
