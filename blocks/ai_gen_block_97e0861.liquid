          {% endif %}

        {% elsif block.settings.content_type == 'form' %}
          <div class="popup-modal-content-form-{{ ai_gen_id }}">
            {% if block.settings.heading != blank %}
              <h2 class="popup-modal-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="popup-modal-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
            {% endif %}

            {%- form 'contact' -%}
