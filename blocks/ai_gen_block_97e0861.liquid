<div class="{{ block.settings.section_width }} text-{{ block.settings.content_alignment }}">
<popup-modal-{{ ai_gen_id }} {{ block.shopify_attributes }}>
  {% if block.settings.show_trigger_button %}
    <button class="popup-modal-trigger-{{ ai_gen_id }} popup-modal-trigger-{{ ai_gen_id }}--{{ block.settings.trigger_button_style }}" data-modal-trigger>
      {{ block.settings.trigger_button_text }}
    </button>
  {% endif %}

  <div class="popup-modal-{{ ai_gen_id }}" data-modal>
    <div class="popup-modal-overlay-{{ ai_gen_id }}" data-modal-overlay></div>
    <div class="popup-modal-container-{{ ai_gen_id }}">
      <button class="popup-modal-close-{{ ai_gen_id }}" data-modal-close aria-label="Close modal">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>

      <div class="popup-modal-content-{{ ai_gen_id }}">
        {% if block.settings.content_type == 'text' %}
          <div class="popup-modal-content-text-{{ ai_gen_id }}">
            {% if block.settings.heading != blank %}
              <h2 class="popup-modal-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="popup-modal-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
            {% endif %}
            {% if block.settings.button_text != blank and block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" class="popup-modal-button-{{ ai_gen_id }} popup-modal-button-{{ ai_gen_id }}--{{ block.settings.button_style }}">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>

        {% elsif block.settings.content_type == 'image_text' %}
          <div class="popup-modal-content-image-{{ ai_gen_id }}">
            <div class="popup-modal-image-wrapper-{{ ai_gen_id }}">
              {% if block.settings.image %}
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  class="popup-modal-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              {% else %}
                <div class="popup-modal-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="popup-modal-text-wrapper-{{ ai_gen_id }}">
              {% if block.settings.heading != blank %}
                <h2 class="popup-modal-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="popup-modal-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
              {% endif %}
              {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                <a href="{{ block.settings.button_link }}" class="popup-modal-button-{{ ai_gen_id }} popup-modal-button-{{ ai_gen_id }}--{{ block.settings.button_style }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>

        {% elsif block.settings.content_type == 'product' %}
          {% if block.settings.product != blank %}
            <div class="popup-modal-content-product-{{ ai_gen_id }}">
              <div class="popup-modal-product-image-{{ ai_gen_id }}">
                {% if block.settings.product.featured_image %}
