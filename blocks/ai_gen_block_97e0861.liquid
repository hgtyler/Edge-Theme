                  {{ block.settings.form_success_message }}
                </div>
              {%- endif -%}
            {%- endform -%}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</popup-modal-{{ ai_gen_id }}>
</div>

<script>
  (function() {
    class PopupModal{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.modal = this.querySelector('[data-modal]');
        this.trigger = this.querySelector('[data-modal-trigger]');
        this.closeButton = this.querySelector('[data-modal-close]');
        this.overlay = this.querySelector('[data-modal-overlay]');
        this.autoOpen = {{ block.settings.auto_open | json }};
        this.autoOpenDelay = {{ block.settings.auto_open_delay }};
        this.showOnce = {{ block.settings.show_once | json }};
        this.storageKey = 'popup-modal-{{ ai_gen_id }}-shown';
      }

      connectedCallback() {
        this.setupEventListeners();
        this.handleAutoOpen();
      }

      setupEventListeners() {
        if (this.trigger) {
          this.trigger.addEventListener('click', () => this.openModal());
        }

        if (this.closeButton) {
          this.closeButton.addEventListener('click', () => this.closeModal());
        }

        if (this.overlay) {
          this.overlay.addEventListener('click', () => this.closeModal());
        }

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.modal.classList.contains('active')) {
            this.closeModal();
          }
        });
      }

      handleAutoOpen() {
        if (!this.autoOpen) return;

        if (this.showOnce) {
          const hasShown = localStorage.getItem(this.storageKey);
          if (hasShown) return;
        }

        setTimeout(() => {
          this.openModal();
          if (this.showOnce) {
            localStorage.setItem(this.storageKey, 'true');
          }
        }, this.autoOpenDelay * 1000);
      }

      openModal() {
        this.modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closeModal() {
        this.modal.classList.remove('active');
        document.body.style.overflow = '';
      }
    }

    customElements.define('popup-modal-{{ ai_gen_id }}', PopupModal{{ ai_gen_id }});
  })();
</script>

