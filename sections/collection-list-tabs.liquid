      {
        "type": "text",
        "id": "heading_section",
        "label": "Heading section",
        "default": "Heading section"
      },
      {
        "type": "header",
        "content": "Tabs background"
      },
      {
        "type": "select",
        "id": "heading_size",
        "label": "Tabs heading size",
        "options": [
            {
                "value": "h1",
                "label": "Heading 1"
            },
            {
                "value": "h2",
                "label": "Heading 2"
            },
            {
                "value": "h3",
                "label": "Heading 3"
            },
            {
                "value": "h4",
                "label": "Heading 4"
            },
            {
                "value": "h5",
                "label": "Heading 5"
            },
            {
                "value": "h6",
                "label": "Heading 6"
            }
        ],
        "default": "h2"
      },
      {
        "type": "select",
        "id": "alignment_vertical",
        "label": "Alignment vertical",
        "options": [
          { "value": "top","label": "Top" },
          { "value": "center","label": "Center" },
          { "value": "bottom","label": "Bottom" },
          { "value": "between","label": "Between" }
