    "name": "Collection list tabs",
    "tag": "section",
    "class": "section--collection-list-tabs",
    "disabled_on": {
        "groups": ["header", "footer", "aside"]
    },
    "settings": [
      {
        "type": "select",
        "id": "section_width",
        "label": "Width",
        "options": [
            {
            "value": "container",
          "label": "Boxed"
            },
            {
            "value": "container-fluid",
            "label": "Wide"
            },
            {
            "value": "w-full",
            "label": "Full"
            }
        ],
        "default": "w-full"
      },
      {
        "type": "select",
        "id": "tabs_type",
        "label": "Tabs type",
        "options": [
            {
            "value": "tabs_background",
            "label": "Tabs with background"
            },
            {
            "value": "tabs_image",
            "label": "Tabs with image"
            }
        ],
        "default": "tabs_background",
        "info": "With the 'Tabs with background' configuration, the layout will always be full, and the spacing will be fixed according to this style."
