{% liquid
  assign show_sidebar = section.settings.show_sidebar
  assign use_header_sidebar = section.settings.use_header_sidebar
  assign type_content = section.settings.type_content
%}
{%- render 'top-divider', show_top_divider: section.settings.show_top_divider, divider_top_width: section.settings.divider_top_width -%}
<div class="section-faq isolate section-padding section-bg" {% render 'section-attributes' %}>
    <div class="container">
      {%- unless use_header_sidebar -%}
      {% render 'section-header', layout_header: section.settings.layout, subheading: section.settings.subheading, heading: section.settings.heading, description: section.settings.description, link_text: section.settings.link_text, button_style: section.settings.button_type, button_url: section.settings.link_url, show_icon : section.settings.show_icon, class:'header-faq', heading_size: section.settings.heading_size_section %}
      {%- endunless -%}
      <div class="grid {% if show_sidebar %} lg:grid-cols-3 {% endif %} gap-x-20 gap-y-12 ">
        {%- if show_sidebar -%}
          <div class="lg:col-span-1">
            <div class=" faq-navigation {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
              {%- if use_header_sidebar -%}
                {% render 'section-header', layout_header: 'vertical', subheading: section.settings.subheading, heading: section.settings.heading, description: section.settings.description, link_text: section.settings.link_text, button_style: section.settings.button_type, button_url: section.settings.link_url, show_icon : section.settings.show_icon, class:'header-faq-sidebar', heading_size: section.settings.heading_size_section %}
              {%- endif -%}
              {%- if section.settings.show_category_sidebar -%}
              <smooth-scroll-nav>
              <ul class="smooth-scroll-nav-list">
              {%- for block in section.blocks -%}
                {%- if block.type == 'category' -%}
                  {%- if block.settings.heading_row != blank -%}
                    <li class="pl-8">
                      <a class="scroll-anchor heading--small block py-3" href="#heading-{{ block.id }}" > {{ block.settings.heading_row }}</a> 
                    </li>
                  {%- endif -%}
                {%- endif -%}
              {%- endfor -%}
              </ul>
              </smooth-scroll-nav>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
          <div class="{% if show_sidebar %} lg:col-span-2 {% endif %} {% if type_content == 'background' %} background-secondary  p-10 md:p-14 global-radius {% endif %} {% if type_content == 'border' %} border p-10 md:p-14 global-radius {% endif %}" >
            <div class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'category' -%}
                    {%- if block.settings.heading_row != blank -%}
                      <div id="heading-{{ block.id }}" class="{{ section.settings.heading_size_category }} faq__category" {{ block.shopify_attributes }}> {{ block.settings.heading_row }}</div>
                    {%- endif -%}
                  {%- when 'question' -%}
                    <div class="accordion" 
                    {{ block.shopify_attributes }}>
                      <collapsible-details>
                        <details {% if section.settings.open_first_collapsible_row and forloop.first %} class="is-open" open {% endif %}>
                          <summary id="Summary-{{ block.id }}-{{ section.id }}">
                            <div class="summary__title">
                              {% render 'icon-svg', icon: block.settings.icon %}
                              <h3 class="accordion__title inline-richtext {{  section.settings.heading_size_question }}">
                                {{ block.settings.heading | default: block.settings.page.title | escape }}
                              </h3>
                            </div>
                            {% render 'icon-caret' %}
                          </summary>
                          <div class="collapsible__content" role="region" aria-labelledby="Summary-{{ block.id }}-{{ section.id }}">
                            <div class="collapsible__content-inner rte">
                              {{ block.settings.row_content }}
                              {{ block.settings.page.content }}
                            </div>
                          </div>
                        </details>
                      </collapsible-details>
                    </div>
                {%- endcase -%}
              {%- endfor -%}
            </div>
          </div>
      </div>
    </div>
</div>
{%- render 'bottom-divider', show_bottom_divider: section.settings.show_bottom_divider, divider_bottom_width: section.settings.divider_bottom_width -%}
{%- if section.settings.show_category_sidebar -%}
<script src="{{ 'smooth-scroll-nav.js' | asset_url }}" defer="defer"></script>
