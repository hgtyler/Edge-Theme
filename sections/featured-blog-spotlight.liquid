
{%- liquid
    assign blog_post = section.settings.blog
    assign posts_displayed = section.settings.blog.articles_count
    if section.settings.post_limit <= section.settings.blog.articles_count or section.settings.post_limit <= 3
        assign posts_displayed = section.settings.post_limit
    endif
    assign show_date = section.settings.show_date
    assign show_author = section.settings.show_author
    assign show_excerpt = section.settings.show_excerpt
    assign show_category = section.settings.show_category
    assign media_size = section.settings.media_size
    assign media_placement = section.settings.media_placement
-%}
{%- capture sizes -%}(min-width: {{ settings.page_width }}px) 48rem, (min-width: 750px) calc((100vw - 130px) / 2), 80px){%- endcapture -%}
    
{%- render 'top-divider', show_top_divider: section.settings.show_top_divider, divider_top_width: section.settings.divider_top_width -%}
<div class="isolate section-featured-blog-spotlight section-padding section-bg" {% render 'section-attributes' %}>
    <div class="{{ section.settings.section_width }}">
        {% render 'section-header', layout_header: section.settings.layout, subheading: section.settings.subheading, heading: section.settings.heading, description: section.settings.description, link_text: section.settings.link_text, button_style: section.settings.button_type, button_url: section.settings.link_url, show_icon : section.settings.show_icon, class:"header-featured-blog-spotlight", heading_size: section.settings.heading_size_section %}
        <div class="highlighted-posts">
            {%- for article in blog_post.articles limit: posts_displayed -%}
                    <a href="{{ article.url }}" class=" highlighted-posts__link flex flex-col md:flex-row items-start justify-between py-8 md:py-14 gap-y-6 gap-x-8 {% unless forloop.last %}border-b {% endunless %} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order:{{ forloop.index }};" {% endif %} >
                        <div class="md:basis-3/5 flex items-start flex-col justify-between self-stretch">
                            {%- if show_category and article.tags.size > 0 -%}
                                <div>
                                    <span class="badge badge-article badge-article__spotlight  mb-8 ">{{ article.tags | first }}</span>
                                </div>
                            {%- endif -%}
                            <div class="max-w-3xl w-full flex flex-col  gap-y-6 md:gap-y-10">
                                <h2 class="highlighted-posts__title {{ section.settings.heading_size }}">{{ article.title | escape }}</h2>
                                <div class="light text-size-small">
                                {%- if show_date -%}
                                    <span class="circle-divider">{{ article.published_at | time_tag: format: 'date' }}</span>
                                {%- endif -%}
                                {%- if show_author -%}
                                    <span>{{ article.author }}</span>
                                {%- endif -%}
                                </div>
                                {%- if show_excerpt -%}
                                    {%- if article.excerpt.size > 0 or article.content.size > 0 -%}
                                    <p class="article-card__excerpt pb-8">
                                        {%- if article.excerpt.size > 0 -%}
                                        {{ article.excerpt | strip_html | truncatewords: 15 }}
                                        {%- else -%}
                                        {{ article.content | strip_html | truncatewords: 15 }}
                                        {%- endif -%}
                                    </p>
                                    {%- endif -%}
                                {%- endif -%}
                            </div>
                        </div>
                        {%- if article.image -%}
                            <div class="mt-0 md:mt-0 max-w-full md:max-w-2xl w-full {% if media_placement == 'left' %} md:-order-1 md:me-8 {% else %} md:ms-4-8  {% endif %}">
                                {%- assign alt = article.image.src.alt | escape  -%}
                                {%- assign widths = "180, 360, 720, 900, 1080 " -%}
                                <div class="overflow-hidden global-radius">
                                {%- render 'responsive-image' , 
                                    image: article.image.src, 
                                    sizes: sizes, 
                                    image_aspect_ratio: media_size,
                                    alt: alt,
                                    width: article.image.src.width,
                                    height: article.image.src.height,
                                    widths: widths
                                -%}
                                </div>
                            </div>
                        {%- endif -%}
                    </a>
                {%-  else -%}
                    <div class="highlighted-posts__link flex flex-col md:flex-row items-start justify-between py-8 md:py-14 gap-y-6 gap-x-6 md:gap-x-0 {% unless forloop.last %}border-b {% endunless %} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order:{{ forloop.index }};" {% endif %} >
                        <div class="md:basis-3/5 flex items-start flex-col justify-between self-stretch">
                            <div>
                                {%- if show_category -%}
                                    <span class="badge badge-article badge-article__spotlight mb-8">First tag</span>
                                {%- endif -%}
                            </div>
                            <div class="max-w-3xl flex flex-col gap-y-12">
                                <h2 class="highlighted-posts__title {{ section.settings.heading_size }}">{{ 'sections.featured_blog.onboarding_title' | t }}</h2>
                                <div class="light text-size-small">
                                    {%- if show_date -%}
                                        <span class="circle-divider">{{ "today" | time_tag: format: 'date' }}</span>
                                      {%- endif -%}
                                      {%- if show_author -%}
                                        <span>{{ 'sections.featured_blog.onboarding_author' | t  }}</span>
                                      {%- endif -%}
                                </div>
                                {%- if show_excerpt -%}
                                    <p class="article-card__excerpt pb-14">
                                      {{ 'sections.featured_blog.onboarding_content' | t }}
                                    </p>
                                  {%- endif -%}
                            </div>
                        </div>
                        <div class="mt-0 md:mt-0 max-w-full md:max-w-2xl w-full {% if media_placement == 'left' %} md:-order-1 md:me-8 {% else %} md:ms-4-8  {% endif %}">
                            {% render 'placeholder-image', image_placeholder : 'image', image_aspect_ratio : media_size  %}
                        </div>
                    </div>
            {%- endfor -%}
        </div>
    </div>
</div>
{%- render 'bottom-divider', show_bottom_divider: section.settings.show_bottom_divider, divider_bottom_width: section.settings.divider_bottom_width -%}
