{{ 'section-main-blog.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign columns_desktop = section.settings.columns_desktop
  assign posts_per_page = section.settings.posts_per_page
  assign show_image = section.settings.show_image
  assign show_date = section.settings.show_date
  assign show_author = section.settings.show_author
  assign show_read_more = section.settings.show_read_more
  assign show_excerpt = section.settings.show_excerpt
  assign show_category = section.settings.show_category
  assign enable_button_underlined_white = section.settings.enable_button_underlined_white
  assign image_ratio = section.settings.image_ratio
  assign column_gap = section.settings.column_gap | append: 'rem'
  assign column_gap_mobile = section.settings.column_gap_mobile | append: 'rem'
  assign subheading = section.settings.subheading
  assign heading_size = section.settings.heading_size_section
  assign description = section.settings.description
-%}

{%- capture sizes -%}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: columns_desktop }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2){%- endcapture -%}

{%- capture animate_slide_in -%}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}{%- endcapture -%}
{%- capture header_content -%}
  {%- if subheading != blank -%}
    <p class="section__sub-heading sub-heading {{ animate_slide_in }}">{{ subheading }}</p>
  {%- endif -%}
    <h1 class="section__heading {{ animate_slide_in }} {{ heading_size |  default: "h3" }}">
      {{ blog.title | escape }}
    </h1>
  {%- if description != blank -%}
    <div class="section__description rte {{ animate_slide_in }} ">
      {{ description }}
    </div>
  {%- endif -%}
{%- endcapture -%}
{%- render 'top-divider', show_top_divider: section.settings.show_top_divider, divider_top_width: section.settings.divider_top_width -%}
{%- paginate blog.articles by posts_per_page -%}
  <div class="main-blog section-padding section-bg" {% render 'section-attributes' %}>
    <div class="{{ section.settings.section_width }}" >
      {%- if section.settings.show_title -%}
      <div class="main-blog-header-wrap section-header-wrap flex flex-col gap-y-4 lg:items-center text-center mb-8 section-header-vertical">
        {{ header_content }}
      </div>
      {%- endif -%}
      {%- if section.settings.show_tags and blog.all_tags.size > 0 -%}
        <ul class="caption-with-letter-spacing flex flex-row flex-wrap justify-center  gap-x-6 list-unstyled tags-list mb-16 gap-y-6" role="tablist">
          <li class="tag{% if current_tags == blank %} selected{% endif %}"  aria-selected="{% if current_tags == blank %}true{% else %}false{% endif %}" role="tab">
            <a href="{{ blog.url }}"  >
              {{ 'blogs.general.all_pots' | t }}
            </a>
          </li>
          {%- for tag in blog.all_tags -%}
            <li class="tag{% if current_tags contains tag %} selected{% endif %}" role="tab" aria-selected="{% if current_tags contains tag %}true{% else %}false{% endif %}" >
              {%- if current_tags contains tag -%}
                {{- tag | link_to_remove_tag: tag -}}
              {%- else -%}
                {{- tag | link_to_tag: tag -}}
              {%- endif -%}
            </li>
          {%- endfor -%}
        </ul>
      {%- endif -%}
      <div>

      </div>
      <div class="blog-articles grid grid-cols-1 lg:grid-cols-{{ columns_desktop }} " style="--column-gap:{{ column_gap }};--column-gap-mobile:{{ column_gap_mobile }};">
        {%- for article in blog.articles -%}
          <div
            class="blog-articles__article article{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            {%- render 'article-card',
              article: article,
              media_aspect_ratio: image_ratio,
              show_image: show_image,
              show_date: show_date,
              show_author: show_author,
              show_read_more: show_read_more,
              show_category: show_category
              show_excerpt: show_excerpt,
              columns_desktop: columns_desktop
              sizes: sizes,
              enable_button_underlined_white: enable_button_underlined_white
            -%}
          </div>
        {%- endfor -%}
      </div>

      {%- if paginate.pages > 1 -%}
        {%- render 'pagination', paginate: paginate -%}
      {%- endif -%}
    </div>
  </div>
{%- endpaginate -%}
{%- render 'bottom-divider', show_bottom_divider: section.settings.show_bottom_divider, divider_bottom_width: section.settings.divider_bottom_width -%}
