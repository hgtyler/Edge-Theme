{% comment %}
  Renders cart drawer

  Usage:
  {% render 'cart-drawer' %}
{% endcomment %}
{%- if settings.cart_type == 'drawer' -%}
<style>
  .drawer {
    visibility: hidden;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    transition: visibility var(--duration-default) ease;
    pointer-events: none;
  }
  .drawer.active {
    visibility: visible;
    pointer-events: auto;
  }
  .drawer .complementary-products{
    display: none;
  }
  .drawer.active .complementary-products{
    display: block;
  }
</style>

{{ 'quantity-popover.css' | asset_url | stylesheet_tag }}
{%- if settings.addons_display == 'accordion' -%}
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{%- endif -%}

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>


<cart-drawer class="drawer{% if cart == empty %} is-empty{% endif %}" {% if settings.cart_type != 'page' and request.page_type != 'cart' %} disabled {% endif %}>
  <div id="CartDrawer" class="cart-drawer">
    <div id="CartDrawer-Overlay" class="cart-drawer__overlay"></div>
    <div
      class="drawer__inner"
      role="dialog"
      aria-modal="true"
      aria-label="{{ 'sections.cart.title' | t }}"
      tabindex="-1"
    >
    {%- if settings.cart_message != blank and cart != empty -%}
      <div class="py-4 px-10 lg:px-14 center bg-accent" style="--color-accent:{{ settings.cart_message_color_background.rgb }};--color-foreground:{{ settings.cart_message_color_text.rgb }}">
      {{ settings.cart_message }}
      </div>
    {%- endif -%}
    <div class="drawer__header border-b">
      <div class="drawer__heading uppercase flex items-center gap-x-4">
        <span class="h5">{{ 'sections.cart.title' | t }}</span>
        {%- if cart != empty -%}
          <div class="cart-count-bubble !static">
            <span aria-hidden="true">{{ cart.item_count }}</span>
          </div>
        {%- endif -%}
      </div>
      <button
        class="drawer__close close-drawer-btn"
        type="button"
        onclick="this.closest('cart-drawer').close()"
        aria-label="{{ 'accessibility.close' | t }}"
      >
        {% render 'icon-close' %}
      </button>
    </div>
      {%- if cart == empty -%}
        <div class="drawer__inner-empty">
          <div class="cart-drawer__warnings center {% if settings.cart_empty_collection != blank %} justify-between {% else %} justify-center {% endif %}">
            <div class="cart-drawer__empty-content text-center">
              {% render 'icon-cart' %}
              <h2 class="cart__empty-text h6 mt-5 mb-8">{{ 'sections.cart.empty' | t }}</h2>
              <a href="{{ settings.cart_empty_button_link }}" class="btn btn-primary">
                {{ 'general.continue_shopping' | t }}
              </a>
            </div>
            {% if settings.cart_empty_collection != blank %}
            <div class="cart-drawer__collection">
              <h6 class="body-2 mb-8">{{ 'sections.cart.empty_collection' | t }}</h6>
              <div class="grid gap-2 lg:grid-cols-3 grid--mobile-slider" style="--width-item: 130px;">
              {% for collection in settings.cart_empty_collection %}
                {% if collection != blank %}
                  {% liquid
                  assign image = collection.image | default: collection.featured_image
                  assign sizes = '(min-width: 750px) 160px, 130px'
                  assign image_aspect_ratio = 'portrait'
                  assign title = collection.title
                  %}
                  <div class="cart-drawer__collection-item grid gap-4">
                    <a href="{{ collection.url }}">
                      {% render 'responsive-image' , image : image, sizes: sizes, image_aspect_ratio: image_aspect_ratio, alt: title %}
                    </a>
                    <a href="{{ collection.url }}" class="sub-heading link">
                      {{ collection.title }}
                    </a>
                  </div>
                {% endif %}
              {% endfor %}
              </div>
            </div>
            {% endif %}
          </div>
        </div>
      {%- endif -%}
      
      <cart-drawer-items
        {% if cart == empty %}
          class=" is-empty"
        {% endif %}
      >
        {%- if settings.show_free_shipping_bar and cart != empty -%}
          {% render 'free-shipping' , total_price : cart.total_price , custom_class: 'px-10 lg:px-14 pt-8' %}
        {%- endif -%}

        <form
          action="{{ routes.cart_url }}"
          id="CartDrawer-Form"
          class="cart__contents cart-drawer__form px-10 lg:px-14 py-10 lg:py-12"
          method="post"
        >
          <div id="CartDrawer-CartItems" class="drawer__contents js-contents">
            {%- if cart != empty -%}
              <div class="drawer__cart-items-wrapper">
                <div class="cart-items" role="table">
                  <div class="flex flex-col gap-y-10" role="rowgroup">
                    {%- for item in cart.items -%}
                      <div id="CartDrawer-Item-{{ item.index | plus: 1 }}" class="cart-item" role="row">
                        <div class="cart-item__media" role="cell" headers="CartDrawer-ColumnProductImage">
                          
                          {% if item.image %}
                            {% comment %} Leave empty space due to a:empty CSS display: none rule {% endcomment %}
                            <a href="{{ item.url }}" class="cart-item__link" tabindex="-1" aria-hidden="true"> </a>
                            {% assign widths = '90, 180' %}
                            {% assign height = 90 | divided_by: item.image.aspect_ratio | ceil %}
                            {% render 'responsive-image' ,
                                image: item.image,
                                widths: widths,
                                image_aspect_ratio: settings.card_image_size,
                                sizes: '90px', 
                                width: '90',
                                height:height
                            %}
                          {% endif %}
                        </div>
                        <div class="cart-item__infor flex-1">
                          <div class="flex flex-row justify-between">
                            <div class="cart-item__details flex-1 pie-2" role="cell" headers="CartDrawer-ColumnProduct">
                            {%- if settings.show_vendor -%}
                                <p class="caption-with-letter-spacing light">{{ item.product.vendor }}</p>
                              {%- endif -%}

                              <a href="{{ item.url }}" class="cart-item__name break">
                                {{- item.product.title | escape -}}
                              </a>
                              
                              {%- if item.product.has_only_default_variant == false
                                or item.properties.size != 0
                                or item.selling_plan_allocation != null
                              -%}
                                <dl class="flex items-center gap-2 uppercase flex-wrap">
                                  {%- if item.product.has_only_default_variant == false -%}
                                    {%- for option in item.options_with_values -%}
                                      <div class="product-option">
                                        <dt class="visually-hidden" >{{ option.name }}:</dt>
                                        <dd>
                                          {{ option.value -}}
                                          {%- unless forloop.last %}, {% endunless %}
                                        </dd>
                                      </div>
                                    {%- endfor -%}
                                  {%- endif -%}

                                  {%- for property in item.properties -%}
                                    {%- assign property_first_char = property.first | slice: 0 -%}
                                    {%- if property.last != blank and property_first_char != '_' -%}
                                      <div class="product-option">
                                        <dt class="visually-hidden" >{{ property.first }}:</dt>
                                        <dd>
                                          {%- if property.last contains '/uploads/' -%}
                                            <a
                                              href="{{ property.last }}"
                                              class="link"
                                              target="_blank"
                                              aria-describedby="a11y-new-window-message"
                                            >
                                              {{ property.last | split: '/' | last }}
                                            </a>
                                          {%- else -%}
                                            {{ property.last }}
                                          {%- endif -%}
                                        </dd>
                                      </div>
                                    {%- endif -%}
                                  {%- endfor -%}
                                </dl>

                                <p class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                              {%- endif -%}
                              {%- if item.original_price != item.final_price -%}
                                <div class="cart-item__discounted-prices mt-1">
                                  <span class="visually-hidden">
                                    {{ 'products.product.price.regular_price' | t }}
                                  </span>
                                  <s class="cart-item__old-price product-option">
                                    {{- item.original_price | money -}}
                                  </s>
                                  <span class="visually-hidden">
                                    {{ 'products.product.price.sale_price' | t }}
                                  </span>
                                  <strong class="cart-item__final-price product-option">
                                    {{ item.final_price | money }}
                                  </strong>
                                </div>
                              {%- else -%}
                                <div class="product-option mt-1">
                                  {{ item.original_price | money }}
                                </div>
                              {%- endif -%}
                              <ul
                                class="discounts list-unstyled"
                                role="list"
                                aria-label="{{ 'customer.order.discount' | t }}"
                              >
                                {%- for discount in item.line_level_discount_allocations -%}
                                  <li class="discounts__discount">
                                    {{ discount.discount_application.title }}
                                  </li>
                                {%- endfor -%}
                              </ul>
                            </div>

                            <div class="cart-item__totals right" role="cell" headers="CartDrawer-ColumnTotal">
                              {%- render 'loading-spinner' -%}
                              <div class="cart-item__price-wrapper">
                                {%- if item.original_line_price != item.final_line_price -%}
                                  <div class="cart-item__discounted-prices">
                                    <span class="visually-hidden">
                                      {{ 'products.product.price.regular_price' | t }}
                                    </span>
                                    <s class="cart-item__old-price price price--end">
                                      {{ item.original_line_price | money }}
                                    </s>
                                    <span class="visually-hidden">
                                      {{ 'products.product.price.sale_price' | t }}
                                    </span>
                                    <span class="price price--end">
                                      {{ item.final_line_price | money }}
                                    </span>
                                  </div>
                                {%- else -%}
                                  <span class="price price--end">
                                    {{ item.original_line_price | money }}
                                  </span>
                                {%- endif -%}

                                {%- if item.variant.available and item.unit_price_measurement -%}
                                  <div class="unit-price caption">
                                    <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                                    {{ item.unit_price | money }}
                                    <span aria-hidden="true">/</span>
                                    <span class="visually-hidden"
                                      >&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span
                                    >
                                    {%- if item.unit_price_measurement.reference_value != 1 -%}
                                      {{- item.unit_price_measurement.reference_value -}}
                                    {%- endif -%}
                                    {{ item.unit_price_measurement.reference_unit }}
                                  </div>
                                {%- endif -%}
                              </div>
                            </div>
                          </div>
                        {%- liquid
                          assign has_qty_rules = false
                          if item.variant.quantity_rule.increment > 1 or item.variant.quantity_rule.min > 1 or item.variant.quantity_rule.max != null
                            assign has_qty_rules = true
                          endif

                          assign has_vol_pricing = false
                          if item.variant.quantity_price_breaks.size > 0
                            assign has_vol_pricing = true
                          endif
                        -%}
                        <div
                          class="cart-item__quantity mt-4 {% if has_qty_rules or has_vol_pricing %} cart-item__quantity--info{% endif %}"
                          role="cell"
                          headers="CartDrawer-ColumnQuantity"
                        >
                          <quantity-popover>
                            <div class="cart-item__quantity-wrapper quantity-popover-wrapper">
                              <div class="quantity-popover-container{% if has_qty_rules or has_vol_pricing %} quantity-popover-container--hover{% endif %}">
                                <quantity-input class="quantity cart-quantity quantity-sm">
                                  <label class="visually-hidden" for="Drawer-quantity-{{ item.index | plus: 1 }}">
                                    {{ 'products.product.quantity.label' | t }}
                                  </label>
                                  <button class="quantity__button quantity__button-sm" name="minus" type="button">
                                    <span class="visually-hidden">
                                      {{-
                                        'products.product.quantity.decrease'
                                        | t: product: item.product.title
                                        | escape
                                      -}}
                                    </span>
                                    {% render 'icon-minus' %}
                                  </button>
                                  <input
                                    class="quantity__input quantity__input-sm"
                                    type="number"
                                    data-quantity-variant-id="{{ item.variant.id }}"
                                    name="updates[]"
                                    value="{{ item.quantity }}"
                                    {% # theme-check-disable %}
                                    data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                                    min="0"
                                    data-min="{{ item.variant.quantity_rule.min }}"
                                    {% if item.variant.quantity_rule.max != null %}
                                      max="{{ item.variant.quantity_rule.max }}"
                                    {% endif %}
                                    step="{{ item.variant.quantity_rule.increment }}"
                                    {% # theme-check-enable %}
                                    aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                                    id="Drawer-quantity-{{ item.index | plus: 1 }}"
                                    data-index="{{ item.index | plus: 1 }}"
                                  >
                                  <button class="quantity__button quantity__button-sm" name="plus" type="button">
                                    <span class="visually-hidden">
                                      {{-
                                        'products.product.quantity.increase'
                                        | t: product: item.product.title
                                        | escape
                                      -}}
                                    </span>
                                    {% render 'icon-plus' %}
                                  </button>
                                </quantity-input>
                              </div>
                              <cart-remove-button
                                id="CartDrawer-Remove-{{ item.index | plus: 1 }}"
                                data-index="{{ item.index | plus: 1 }}"
                              >
                                <button
                                  type="button"
                                  class="cart-remove-button"
                                  aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                                  data-variant-id="{{ item.variant.id }}"
                                >
                                {{ 'sections.cart.remove' | t | escape }}
                                </button>
                              </cart-remove-button>
                            </div>
                            {%- if has_qty_rules or has_vol_pricing -%}
                              <button
                                type="button"
                                class="quantity-popover__info-button quantity-popover__info-button--icon-with-label "
                                aria-expanded="false"
                              >
                                {% render 'icon-info' %}
                                <span>
                                  {%- if has_vol_pricing -%}
                                    {{ 'products.product.volume_pricing.note' | t }}
                                  {%- elsif has_qty_rules -%}
                                    {{ 'products.product.quantity.note' | t }}
                                  {%- endif -%}
                                </span>
                              </button>
                            {%- endif -%}
                            {%- if has_vol_pricing or has_qty_rules -%}
                              <div
                                class="cart-items__info global-settings-popup quantity-popover__info"
                                tabindex="-1"
                                hidden
                              >
                                {%- if has_qty_rules == false -%}
                                  <span class="volume-pricing-label caption">
                                    {{- 'products.product.volume_pricing.title' | t -}}
                                  </span>
                                {%- endif -%}
                                <div class="quantity__rules caption">
                                  {%- if item.variant.quantity_rule.increment > 1 -%}
                                    <span class="divider">
                                      {{-
                                        'products.product.quantity.multiples_of'
                                        | t: quantity: item.variant.quantity_rule.increment
                                      -}}
                                    </span>
                                  {%- endif -%}
                                  {%- if item.variant.quantity_rule.min > 1 -%}
                                    <span class="divider">
                                      {{-
                                        'products.product.quantity.min_of'
                                        | t: quantity: item.variant.quantity_rule.min
                                      -}}
                                    </span>
                                  {%- endif -%}
                                  {%- if item.variant.quantity_rule.max != null -%}
                                    <span class="divider">
                                      {{-
                                        'products.product.quantity.max_of'
                                        | t: quantity: item.variant.quantity_rule.max
                                      -}}
                                    </span>
                                  {%- endif -%}
                                </div>
                                <button
                                  class="button-close"
                                  type="button"
                                  aria-label="{{ 'accessibility.close' | t }}"
                                >
                                  {%- render 'icon-close' -%}
                                </button>
                                {%- if item.variant.quantity_price_breaks.size > 0 -%}
                                  <volume-pricing class="parent-display">
                                    <ul class="list-unstyled">
                                      <li>
                                        <span>{{ item.variant.quantity_rule.min }}+</span>
                                        <span>{{ item.variant.price | money_with_currency }}/ea</span>
                                      </li>
                                      {%- for price_break in item.variant.quantity_price_breaks -%}
                                        <li>
                                          <span>
                                            {{- price_break.minimum_quantity -}}
                                            <span aria-hidden="true">+</span></span
                                          >
                                          <span>{{ price_break.price | money_with_currency }}/ea</span>
                                        </li>
                                      {%- endfor -%}
                                    </ul>
                                  </volume-pricing>
                                {%- endif -%}
                              </div>
                            {%- endif -%}
                            <div
                              id="CartDrawer-LineItemError-{{ item.index | plus: 1 }}"
                              class="cart-item__error"
                              role="alert"
                            >
                              <small class="cart-item__error-text"></small>
                              <svg
                                aria-hidden="true"
                                focusable="false"
                                class="icon icon-error"
                                viewBox="0 0 13 13"
                              >
                                <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                                <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                                <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                                <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                              </svg>
                            </div>
                          </quantity-popover>
                        </div>
                        </div>
                      </div>
                    {%- endfor -%}
                    
                  </div>
                </div>
              </div>
            {%- endif -%}
            <p id="CartDrawer-LiveRegionText" class="visually-hidden" role="status"></p>
            <p id="CartDrawer-LineItemStatus" class="visually-hidden" aria-hidden="true" role="status">
              {{ 'accessibility.loading' | t }}
            </p>
          </div>
          <div id="CartDrawer-CartErrors" role="alert"></div>
        </form>
        {%- if cart != empty and settings.show_product_recommendations -%}
          {% liquid
            assign recommendations_limit = settings.recommendations_limit
            assign product_card_type = settings.product_card_type
          %}
          {% if settings.recommendations_type == 'auto' %}
          <product-recommendations class="complementary-products" data-url="{{ routes.product_recommendations_url }}?section_id=cart-drawer&product_id={{ cart.items[0].product_id }}&limit={{ recommendations_limit }}">
            {% if recommendations.performed and recommendations.products_count > 0 %}
              {% liquid
                assign arrows = false
                if recommendations.products_count > 1 and product_card_type == 'small'
                  assign arrows = true
                elsif recommendations.products_count > 3 and product_card_type == 'standard'
                  assign arrows = true
                endif
              %}

              {% render 'recommendations-cart-drawer', products: recommendations.products, arrows: arrows, recommendations_limit: recommendations_limit %}
            {% endif %}
          </product-recommendations>
          {% elsif settings.recommendations_type == 'fixed' %}
            {% liquid
              assign recommendations_products = settings.recommendations_type_fixed
              assign products_count = 0
              for product in recommendations_products
                assign products_count = products_count | plus: 1
              endfor
              assign arrows = false
                if products_count > 1 and product_card_type == 'small'
                  assign arrows = true
                elsif products_count > 3 and product_card_type == 'standard'
                  assign arrows = true
                endif
            %}
            {%- if recommendations_products != blank -%}
              {% render 'recommendations-cart-drawer', products: recommendations_products, arrows: arrows, recommendations_limit: recommendations_limit %}
            {%- endif -%}
          {% endif %}
      {%- endif -%}
      </cart-drawer-items>
      <div class="drawer__footer border-t pb-8 lg:pb-10">
        {% assign upsell_product = all_products[settings.cart_upsell_product] %}
        {% if settings.enable_cart_upsell and upsell_product != blank %}
          <div class="px-10 lg:px-14 pt-5 lg:pt-6 w-full flex gap-x-8">
          {% render 'cart-checkbox-upsell', upsell_product: upsell_product %}
          </div>
        {% endif %}
        {%-liquid
            assign addons_display = settings.addons_display
        -%}
        {% if addons_display == 'popup' %}
          {% render 'cart-addons-popup' %}
        {% else %}
          {% render 'cart-addons-accordion' %}
        {% endif %}
        
        <!-- Start blocks -->
        <!-- Subtotals -->

        <div class="cart-drawer__footer px-10 lg:px-14" {{ block.shopify_attributes }}>
          <div>
            {%- if cart.cart_level_discount_applications.size > 0 -%}
              <ul class="discounts list-unstyled " role="list" aria-label="{{ 'customer.order.discount' | t }}">
                {%- for discount in cart.cart_level_discount_applications -%}
                  <li class="discounts__discount discounts__discount--end">
                    {{ discount.title }}
                    (-{{ discount.total_allocated_amount | money }})
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>

          <div class="totals {% if settings.show_tax_note == false %} mb-8 {% endif %}" role="status">
            <p class="totals__total">{{ 'sections.cart.estimated_total' | t }}</p>
            <p class="totals__total-value">{{ cart.total_price | money_with_currency }}</p>
          </div>
          {%- if settings.show_tax_note -%}
            <small class="tax-note caption-large rte">
              {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
                {{ 'sections.cart.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
              {%- elsif cart.taxes_included -%}
                {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
              {%- elsif shop.shipping_policy.body != blank -%}
                {{ 'sections.cart.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}
              {%- else -%}
                {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
              {%- endif -%}
            </small>
          {%- endif -%}
        </div>

        <!-- CTAs -->

        <div class="cart__ctas flex flex-row px-10 lg:px-14 items-center" {{ block.shopify_attributes }}>
          {%- if settings.enable_terms_checkbox -%}
            <cart-terms-check class="grid gap-y-4 w-full">
          {% endif %}
          {%- if settings.enable_terms_checkbox -%}
            <div class="cart__terms-container text-start">
              <label for="CartDrawer-Terms" class="cart__terms-label inline-flex flex-row items-center gap-x-1 cursor-pointer">
                <input type="checkbox" class="cart__terms-checkbox custom-checkbox" id="CartDrawer-Terms" required>
                {%- if settings.link_terms_checkbox != blank -%}
                  <span class="cart__terms-text">{{ 'sections.cart.terms_checkbox_html' | t: link: settings.link_terms_checkbox }}</span>
                {%- else -%}
                  {{ 'sections.cart.terms_checkbox' | t }}
                {%- endif -%}
              </label>
            </div>
          {%- endif -%}
          {%- if settings.enable_terms_checkbox -%}
            <div class="flex flex-row items-center gap-x-12">
          {% endif %}
          {%- if settings.show_button_view_cart -%}
            <div>
            <a href="{{ routes.cart_url }}" class="btn btn-underlined" title="{{ 'sections.cart.view_cart' | t | escape }}">{{ 'sections.cart.view_cart' | t }}</a>
            </div>
          {%- endif -%}
          <button
            type="submit"
            id="CartDrawer-Checkout"
            class="cart__checkout-button btn btn-primary flex-1"
            name="checkout"
            form="CartDrawer-Form"
