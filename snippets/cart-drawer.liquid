              disabled
            {% endif %}
          >
            {%- if settings.show_icon_checkout -%}
              {% render 'icon-padlock' %}
            {%- endif -%}
            {{ 'sections.cart.checkout' | t }}
          </button>
          {%- if settings.enable_terms_checkbox -%}
            </div>
          {% endif %}
          {%- if settings.enable_terms_checkbox -%}
