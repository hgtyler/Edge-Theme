<link rel="stylesheet" href="{{ 'cart-upsell.css' | asset_url }}" media="print" onload="this.media='all'">
{% if upsell_product %}
  {% assign variant_id = upsell_product.variants.first.id %}
  <div class="cart-upsell inline-flex items-center">
      <input type="checkbox" id="cart-upsell-checkbox" class="custom-checkbox__input sr-only" name="cart-upsell" value="1" data-variant-id="{{ variant_id }}" >
      <span class="custom-checkbox__icon"></span>
      <label for="cart-upsell-checkbox" class="custom-checkbox">
      {{ settings.cart_upsell_text }} 
    </label>
  </div>
{% endif %}
